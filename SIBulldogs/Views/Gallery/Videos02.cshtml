    string imageWidth = "394px";
    string imageHeight = "223.95px";
    string extension = ".mp4";
    string folder = "Videos/02/";
    string folderURL = "../content/gallery/" + folder;
    int count = Directory.GetFiles("wwwroot/content/gallery/" + folder, "*" + extension).Length;
}

<button onclick="topFunction()" id="my-button" title="Go to top">Top</button>

