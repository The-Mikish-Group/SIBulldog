<!-- DownloadFile script -->
<script>

    function downloadFile(filename) {        
        var r = confirm("Okay to Download " + filename + "?");
        if (r == true) {
            filename = "@downloadFolderLocation" + filename + "@extension";
            window.open(filename, "_self");
        } else { }        
    }    

</script>

<!-- Add the "Top" Button to view so we can get back to the top of the page. -->
<script>

// Get the button element
const myButton = document.getElementById("my-button");

// Function to show or hide the button
const toggleButton = () => {
  if (window.pageYOffset > 20) {
    myButton.style.display = "block";
  } else {
    myButton.style.display = "none";
  }
};

// Scroll event listener that calls the toggleButton function
window.addEventListener("scroll", toggleButton);

// Function to scroll to the top of the page
const scrollToTop = () => {
  window.scrollTo(0, 0);
};

// Click event listener for the button that calls the scrollToTop function
myButton.addEventListener("click", scrollToTop);


</script>